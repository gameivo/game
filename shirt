    <div class="notification" id="notification"></div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Canvas setup
            const canvas = document.getElementById('t-shirt-canvas');
            const ctx = canvas.getContext('2d');
            
            // Set canvas dimensions
            function setCanvasSize() {
                const container = canvas.parentElement;
                canvas.width = container.clientWidth;
                canvas.height = container.clientHeight;
                drawTShirt();
            }
            
            setCanvasSize();
            window.addEventListener('resize', setCanvasSize);
            
            // T-shirt properties
            let tShirtColor = '#ffffff';
            let designImage = null;
            let designScale = 1;
            let designX = 0;
            let designY = 0;
            let isDragging = false;
            let dragStartX = 0;
            let dragStartY = 0;
            let designOffsetX = 0;
            let designOffsetY = 0;
            let placement = 'front';
            
            // Draw the t-shirt with the design
            function drawTShirt() {
                // Clear canvas
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                // Draw t-shirt base
                ctx.fillStyle = tShirtColor;
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                // Draw t-shirt shape (simplified)
                ctx.strokeStyle = '#bdc3c7';
                ctx.lineWidth = 2;
                ctx.strokeRect(10, 10, canvas.width - 20, canvas.height - 20);
                
                // Draw neckline
                ctx.beginPath();
                ctx.moveTo(canvas.width * 0.3, 10);
                ctx.lineTo(canvas.width * 0.5, 40);
                ctx.lineTo(canvas.width * 0.7, 10);
                ctx.stroke();
                
                // Draw design if exists
                if (designImage) {
                    const scaledWidth = designImage.width * designScale;
                    const scaledHeight = designImage.height * designScale;
                    
                    // Calculate position to center design initially
                    if (designX === 0 && designY === 0) {
                        designX = (canvas.width - scaledWidth) / 2;
                        designY = (canvas.height - scaledHeight) / 2;
                    }
                    
                    ctx.drawImage(designImage, designX, designY, scaledWidth, scaledHeight);
                }
            }
            
            // Color selection
            const colorOptions = document.querySelectorAll('.color-option');
            colorOptions.forEach(option => {
                option.addEventListener('click', function() {
                    colorOptions.forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    tShirtColor = this.getAttribute('data-color');
                    drawTShirt();
                });
            });
            
            // Design upload
            const uploadTrigger = document.getElementById('upload-trigger');
            const designUpload = document.getElementById('design-upload');
            
            uploadTrigger.addEventListener('click', function() {
                designUpload.click();
            });
            
            designUpload.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        designImage = new Image();
                        designImage.onload = function() {
                            // Reset position and scale
                            designX = 0;
                            designY = 0;
                            designScale = 1;
                            updateZoomLevel();
                            drawTShirt();
                        };
                        designImage.src = event.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
            
            // Zoom controls
            const zoomInBtn = document.getElementById('zoom-in');
            const zoomOutBtn = document.getElementById('zoom-out');
            const zoomLevel = document.getElementById('zoom-level');
            
            function updateZoomLevel() {
                zoomLevel.textContent = Math.round(designScale * 100) + '%';
            }
            
            zoomInBtn.addEventListener('click', function() {
                if (designImage && designScale < 3) {
                    designScale += 0.1;
                    updateZoomLevel();
                    drawTShirt();
                }
            });
            
            zoomOutBtn.addEventListener('click', function() {
                if (designImage && designScale > 0.2) {
                    designScale -= 0.1;
                    updateZoomLevel();
                    drawTShirt();
                }
            });
            
            // Placement controls
            const frontBtn = document.getElementById('front-btn');
            const backBtn = document.getElementById('back-btn');
            
            frontBtn.addEventListener('click', function() {
                frontBtn.classList.add('active');
                backBtn.classList.remove('active');
                placement = 'front';
                // In a real implementation, you would switch between front and back views
                showNotification('Design placement set to front');
            });
            
            backBtn.addEventListener('click', function() {
                backBtn.classList.add('active');
                frontBtn.classList.remove('active');
                placement = 'back';
                // In a real implementation, you would switch between front and back views
                showNotification('Design placement set to back');
            });
            
            // Drag and drop functionality
            canvas.addEventListener('mousedown', startDrag);
            canvas.addEventListener('mousemove', drag);
            canvas.addEventListener('mouseup', endDrag);
            canvas.addEventListener('mouseleave', endDrag);
            
            function startDrag(e) {
                if (!designImage) return;
                
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const scaledWidth = designImage.width * designScale;
                const scaledHeight = designImage.height * designScale;
                
                // Check if click is on the design
                if (x >= designX && x <= designX + scaledWidth && 
                    y >= designY && y <= designY + scaledHeight) {
                    isDragging = true;
                    dragStartX = x;
                    dragStartY = y;
                    designOffsetX = designX;
                    designOffsetY = designY;
                    canvas.style.cursor = 'grabbing';
                }
            }
            
            function drag(e) {
                if (!isDragging || !designImage) return;
                
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                designX = designOffsetX + (x - dragStartX);
                designY = designOffsetY + (y - dragStartY);
                
                drawTShirt();
            }
            
            function endDrag() {
                isDragging = false;
                canvas.style.cursor = 'move';
            }
            
            // Reset design
            const resetBtn = document.getElementById('reset-btn');
            resetBtn.addEventListener('click', function() {
                designImage = null;
                designScale = 1;
                designX = 0;
                designY = 0;
                updateZoomLevel();
                designUpload.value = '';
                drawTShirt();
                showNotification('Design has been reset');
            });
            
            // Form submission
            const designForm = document.getElementById('design-form');
            designForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                
                if (!designImage) {
                    showNotification('Please upload a design first', true);
                    return;
                }
                
                // In a real implementation, you would:
                // 1. Capture the canvas as an image
                // 2. Send the image and form data to a server
                // 3. The server would then email the design
                
                // For demonstration, we'll just show a success message
                showNotification(`Thank you, ${name}! Your design has been sent to ${email}. We'll contact you soon.`);
                
                // Reset form
                designForm.reset();
            });
            
            // Notification system
            function showNotification(message, isError = false) {
                const notification = document.getElementById('notification');
                notification.textContent = message;
                notification.className = 'notification';
                
                if (isError) {
                    notification.classList.add('error');
                }
                
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 5000);
            }
            
            // Initial draw
            drawTShirt();
        });
    </script>
</body>
</html>
